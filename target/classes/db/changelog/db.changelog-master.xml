<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="1" author="jonathas_urbano">
        <createTable tableName="movie">
            <column name="id" type="INT" autoIncrement="true" incrementBy="1"/>
            <column name="year" type="INT"/>
            <column name="title" type="VARCHAR"/>
            <column name="studios" type="VARCHAR"/>
            <column name="producers" type="VARCHAR"/>
            <column name="winner" type="VARCHAR"/>
        </createTable>


        <loadData file="config/liquibase/movielist.csv" tableName="movie" separator=";"/>

    </changeSet>

</databaseChangeLog>